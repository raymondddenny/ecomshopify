<%# app/views/products/show.html.erb %>
<% if @product %>
  <div class="max-w-2xl mx-auto bg-white rounded-lg shadow p-6">
    <h1 class="text-3xl font-bold mb-2"><%= @product.title %></h1>
    <div class="flex flex-col md:flex-row gap-6">
      <% if @product.images.edges.any? %>
        <div class="md:w-1/2">
          <img src="<%= @product.images.edges[0].node.url %>" alt="<%= @product.images.edges[0].node.alt_text.presence || @product.title %>" class="rounded object-cover w-full h-80 mb-4" />
        </div>
      <% end %>
      <div class="md:w-1/2 flex flex-col">
        <div class="mb-4 text-green-600 font-bold text-xl">
          <%= number_to_currency(@product.price_range.min_variant_price.amount, unit: @product.price_range.min_variant_price.currency_code) %>
        </div>
        <div class="prose max-w-none mb-4" style="white-space: normal;">
          <%= @product.description_html.html_safe %>
        </div>
        <%= link_to 'Back to Products', products_path, class: 'text-blue-600 hover:underline' %>
      </div>
    </div>
    <% if @product.images.edges.size > 1 %>
      <div class="mt-6 grid grid-cols-2 md:grid-cols-4 gap-2">
        <% @product.images.edges[1..].each do |img| %>
          <img src="<%= img.node.url %>" alt="<%= img.node.alt_text.presence || @product.title %>" class="rounded object-cover w-full h-32" />
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-red-600">Product not found.</div>
<% end %>
