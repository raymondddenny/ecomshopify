<%# app/views/checkout/new.html.erb %>
<div class="max-w-xl mx-auto mt-10 bg-white rounded-xl shadow-lg p-8">
  <h1 class="text-2xl font-bold mb-6 text-gray-800">Checkout</h1>

  <%= form_with url: checkout_create_path, method: :post, local: true, class: "space-y-6" do |f| %>
    <div>
      <label class="block mb-1 font-semibold text-gray-700">Full Name</label>
      <%= f.text_field :full_name, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div>
      <label class="block mb-1 font-semibold text-gray-700">Email</label>
      <%= f.email_field :email, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div>
      <label class="block mb-1 font-semibold text-gray-700">Phone</label>
      <%= f.telephone_field :phone, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div>
      <label class="block mb-1 font-semibold text-gray-700">Shipping Address</label>
      <%= f.text_field :address1, placeholder: "Address line 1", class: "w-full border border-gray-300 rounded px-3 py-2 mb-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= f.text_field :city, placeholder: "City", class: "w-full border border-gray-300 rounded px-3 py-2 mb-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= f.text_field :province, placeholder: "State/Province", class: "w-full border border-gray-300 rounded px-3 py-2 mb-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= f.text_field :country, placeholder: "Country", class: "w-full border border-gray-300 rounded px-3 py-2 mb-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <%= f.text_field :postal_code, placeholder: "Postal Code", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div>
      <label class="block mb-1 font-semibold text-gray-700">Notes (optional)</label>
      <%= f.text_area :notes, rows: 2, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <div class="flex justify-end">
      <%= f.submit "Proceed to Payment", class: "px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded" %>
    </div>
  <% end %>
</div>
