<div class="max-w-md mx-auto mt-12 bg-gray-900 p-8 rounded-xl shadow-xl">
  <h1 class="text-3xl font-bold mb-6 text-white">Log In</h1>
  <%= form_with url: login_path, local: true, class: "flex flex-col gap-4" do |f| %>
    <div>
      <%= label_tag :email, "Email", class: "block text-white font-semibold mb-1" %>
      <%= email_field_tag :email, params[:email], class: "w-full px-3 py-2 rounded bg-gray-800 text-white border border-gray-700 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div>
      <%= label_tag :password, "Password", class: "block text-white font-semibold mb-1" %>
      <%= password_field_tag :password, nil, class: "w-full px-3 py-2 rounded bg-gray-800 text-white border border-gray-700 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <%= submit_tag "Log In", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4" %>
  <% end %>
  <div class="mt-4 text-center">
    <span class="text-gray-400">Don't have an account?</span>
    <%= link_to "Sign up", signup_path, class: "text-blue-400 hover:underline ml-2" %>
  </div>
</div>
