<%# app/views/cart/checkout.html.erb %>
<div class="max-w-2xl mx-auto p-8 bg-gray-900 text-white rounded-xl shadow-xl mt-8">
  <h1 class="text-3xl font-bold mb-6">Checkout</h1>
  <%= form_with url: checkout_path, method: :post, local: true, class: "space-y-6" do |f| %>
    <div>
      <label class="block mb-2 font-semibold">Full Name</label>
      <%= f.text_field :full_name, required: true, class: "w-full p-2 rounded bg-gray-800 border border-gray-700 text-white" %>
    </div>
    <div>
      <label class="block mb-2 font-semibold">Email</label>
      <%= f.email_field :email, required: true, class: "w-full p-2 rounded bg-gray-800 border border-gray-700 text-white" %>
    </div>
    <div>
      <label class="block mb-2 font-semibold">Phone</label>
      <%= f.telephone_field :phone, required: true, class: "w-full p-2 rounded bg-gray-800 border border-gray-700 text-white" %>
    </div>
    <div>
      <label class="block mb-2 font-semibold">Address</label>
      <%= f.text_field :address1, required: true, placeholder: "Street Address", class: "w-full p-2 rounded bg-gray-800 border border-gray-700 text-white mb-2" %>
      <div class="flex gap-2">
        <%= f.text_field :city, required: true, placeholder: "City", class: "w-1/2 p-2 rounded bg-gray-800 border border-gray-700 text-white" %>
        <%= f.text_field :province, required: true, placeholder: "Province/State", class: "w-1/2 p-2 rounded bg-gray-800 border border-gray-700 text-white" %>
      </div>
      <div class="flex gap-2 mt-2">
        <%= f.text_field :country, required: true, placeholder: "Country", class: "w-1/2 p-2 rounded bg-gray-800 border border-gray-700 text-white" %>
        <%= f.text_field :postal_code, required: true, placeholder: "Postal Code", class: "w-1/2 p-2 rounded bg-gray-800 border border-gray-700 text-white" %>
      </div>
    </div>
    <div class="pt-4 flex gap-4">
      <%= link_to 'Back to Cart', cart_path, class: "px-6 py-2 bg-gray-700 hover:bg-gray-800 rounded text-white font-bold" %>
      <%= f.submit 'Proceed to Payment', class: "px-8 py-2 bg-green-600 hover:bg-green-700 rounded text-white font-bold text-lg" %>
    </div>
  <% end %>
</div>
